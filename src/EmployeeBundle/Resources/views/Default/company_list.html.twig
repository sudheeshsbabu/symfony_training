{# empty Twig template #}
{% extends "EmployeeBundle:Default:base.html.twig" %}
{% block companyList %}
<div class="companies-wrap">
    <h1>{{ 'List of Companies' }}</h1>
    
    <div class="add-company-wrap">
        <button id="add-company">Add Company</button>
    </div>
    <p>&nbsp;</p>
    <div id="company-details-wrap">
        <div class="company-details">
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Serial No.</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                    {% for company in companies %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{{ company.address }}</td>
                        <td>{{ company.serialNo }}</td>
                        <td><a class="company-edit" href="{{ path('company_edit', {'id': company.id}) }}">{{ 'Edit' }}</a></td>
                        <td>
                            <a class="company-delete" href="{{ path('company_delete', {'id': company.id}) }}" style="color:#f00;">
                                {{ 'Delete' }}
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock companyList %}

